<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:properties="clr-namespace:DirectorioMAUI.Properties"
             x:Class="DirectorioMAUI.Pages.SettingsPage">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">

            <Label Text="{Binding Ajustes}"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="{Binding Language}"
                   FontSize="18"
                   FontAttributes="Bold" />

            <Picker ItemsSource="{Binding Idiomas}"
                    ItemDisplayBinding="{Binding Nombre}"
                    SelectedItem="{Binding IdiomaSeleccionado, Mode=TwoWay}"
                    FontSize="16"
                    HeightRequest="80"
                    BackgroundColor="White" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

